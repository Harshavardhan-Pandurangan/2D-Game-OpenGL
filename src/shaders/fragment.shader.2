#version 330 core
out vec4 FragColor;

in vec3 ourColor;
in vec2 TexCoord;
in float type;

uniform sampler2D texture1;
uniform sampler2D texture2;

void main()
{
	vec4 texColor;
    if(type < 1.5){
        texColor = texture(texture1, TexCoord);
    }else{
        texColor = texture(texture2, TexCoord);
    }
	if(texColor.a < 0.1)
        discard;
    FragColor = texColor;
}
